<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to '一覧', boards_path, class: 'btn btn-outline-dark' %>
    <%= link_to '編集', edit_board_path, class: "btn btn-outline-dark" %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>
<div class="card">
  <div class="card-header">
    <h4><%= @board.title %></h4>
  </div>
  <div class="card-body">
    <%# 改行を反映させるヘルパー関数 %>
    <p class="card-text"><%= simple_format(@board.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= @board.name %></p>
  </div>
</div>

<div class="p-comment__list">
  <div class="p-comment_listTitle">コメント</div>
  <%# オブジェクトの数だけviewが表示される 該当箇所はapp/views/comments/_commen.htmml.erb %>
  <%= render @board.comments %>

<%# comments/form で他ディレクトリのパーシャルを呼び出せる%>
<%= render partial: 'comments/form', locals: { comment: @comment } %>